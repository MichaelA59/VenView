<h1><%= @venue.name %></h1>

<p><a href="<%=@venue.url%>">Venue Website</a></p>

<strong>Venue Address:</strong>
<p>
  <%= @venue.address %><br/>
  <%= @venue.city %>, <%= @venue.state %> <%= @venue.zip %>
</p>

<strong>Capacity:</strong> <%= @venue.capacity %>
<br>
<br>

<%= link_to 'Add New Review', new_venue_review_path(@venue) %>

<% @reviews.each do |review| %>

  <%= review.title %>
  Cost: <%= review.cost %>
  Sound Quality: <%= review.sound_quality %>
  Parking/Accessibility <%= review.parking %>
  <%= review.body %>

  <% if current_user && review.user_id == current_user.id %>
    <%= link_to 'Edit Review', edit_venue_review_path(@venue, review) %>
    <%= link_to 'Delete Review', review_path(review), method: :delete,
    data: { confirm: 'Are you sure you want to delete this review?' } %>
  <% end %>

<% end %>

<%= link_to 'Back to Venues', venues_path %>
